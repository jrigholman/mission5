@{
    ViewData["Title"] = "Tutoring Calculator";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/favicon.png">
    <link rel="stylesheet" href="~/css/site.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/calculator.js"></script>
</head>
<body>
    <header>
        <h1>Snowboarding Tutoring Pricing</h1>
    </header>

    <main>
        <label for="hours">Hours Needed:</label>
        <input type="number" id="hours" min="1">
        <span id="error-message" style="color: red;"></span>

        <label for="rate">Rate per Hour:</label>
        <input type="text" id="rate" value="50" readonly> <!-- Adjust rate as needed -->

        <button id="calculate-btn">Calculate Total</button>

        <label for="total">Total Cost:</label>
        <input type="text" id="total" readonly>

        <nav>
            <a href="@Url.Action("Index", "Home")">Back to Home</a>
        </nav>
    </main>

    <footer>
        <p>&copy; 2025 Jonathan Holman | All Rights Reserved</p>
    </footer>
</body>
</html>
