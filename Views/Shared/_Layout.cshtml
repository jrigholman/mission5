<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HobbyWebApp</title>

    <!-- Correct Favicon Paths -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true" />
    <link rel="shortcut icon" href="~/favicon.ico" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/favicon.png" asp-append-version="true" />

    <!-- Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HobbyWebApp.styles.css" asp-append-version="true" />
</head>



<body class="d-flex flex-column min-vh-100">
    <!-- Ensures footer sticks to bottom -->

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HobbyWebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <!-- Aligns menu items to the right -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Calculator">Calculator</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Container -->
    <div class="container flex-grow-1 my-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @* <!-- Footer (Stays at Bottom) --> *@
    @* <footer class="border-top footer text-muted mt-auto py-3 bg-dark text-white"> *@
    @*     <div class="container text-center"> *@
    @*         &copy; 2025 - HobbyWebApp | <a class="text-light" asp-area="" asp-controller="Home" asp-action="Calculator">Calculator</a> *@
    @*     </div> *@
    @* </footer> *@

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/calculator.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
